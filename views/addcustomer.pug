doctype html
html
  head
    title Add Customer
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous")
    
    style.
        html {
            font-family: Helvetica, sans-serif
        }
        body {
            background-color: #bfe2fd;
            margin-left: 20px;
            max-width: 95%;
        }
        div {
            margin-top: 30px
        }
        label {
            font-size: 20px
        }
  body
    div.container
    h1 New Customer
        div        
        form.form-group(action='/addcustomer', method='POST')
            div(class="form-group row")
                label(for="firstname" class="col-sm-2 col-form-label") First Name
                div(class="col-sm-10")
                    input(class="form-control" id="firstname" type="text" name="firstname")
            div(class="form-group row")
                label(for="lastname" class="col-sm-2 col-form-label") Last Name
                div(class="col-sm-10")
                    input(class="form-control" id="lastname" type="text" name="lastname")
            div(class="form-group row")
                label(for="email" class="col-sm-2 col-form-label") Email
                div(class="col-sm-10")
                    input(class="form-control" id="email" type="text" name="email")     
            div(class="form-group row")
                label(for="phone" class="col-sm-2 col-form-label") Phone
                div(class="col-sm-10")
                    input(class="form-control" id="phone" type="text" name="phone")    
            div(class="form-group row")
                div(class="col-sm-10")
                    input(class="btn btn-primary" type="submit", value="Add")